<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.github.volfor.sondsofnature.root.MainActivity" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:paddingTop="32dp">

        <info.hoang8f.widget.FButton
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="@{model::onAnimalsQuizClick}"
            android:text="@string/animals"
            fbutton:buttonColor="@color/light_green_400"
            fbutton:cornerRadius="0dp"
            fbutton:shadowEnabled="false" />

        <info.hoang8f.widget.FButton
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="@{model::onTransportQuizClick}"
            android:text="@string/transport"
            fbutton:buttonColor="@color/deep_orange_400"
            fbutton:cornerRadius="0dp"
            fbutton:shadowEnabled="false" />

        <info.hoang8f.widget.FButton
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:onClick="@{model::onComplexQuizClick}"
            android:text="@string/all_together"
            fbutton:buttonColor="@color/purple_300"
            fbutton:cornerRadius="0dp"
            fbutton:shadowEnabled="false" />

    </LinearLayout>
</layout>